<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <FrameLayout
        android:background="@color/needle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <com.jmedeisis.bugstick.Joystick
            android:id="@+id/joystickRightt"
            android:layout_width="@dimen/base_size"
            android:layout_height="@dimen/base_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|bottom"
            android:background="@drawable/ic_front_back">

            <!-- You may use any View here. -->
            <Button
                android:id="@+id/btnRight"
                android:layout_width="@dimen/stick_size"
                android:layout_height="@dimen/stick_size"
                android:background="@drawable/bg_stick" />

        </com.jmedeisis.bugstick.Joystick>

        <com.jmedeisis.bugstick.Joystick
            android:id="@+id/joystickLeft"
            android:layout_width="@dimen/base_size"
            android:layout_height="@dimen/base_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|bottom"
            android:background="@drawable/bg_base">

            <!-- You may use any View here. -->
            <Button
                android:id="@+id/btnLeft"
                android:layout_width="@dimen/stick_size"
                android:layout_height="@dimen/stick_size"
                android:background="@drawable/bg_stick_unpressed" />

        </com.jmedeisis.bugstick.Joystick>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/joystickRightt"
            android:layout_toEndOf="@+id/joystickLeft"
            android:orientation="vertical">


            <TextView
                android:id="@+id/value"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_light"
                android:text="Velocidad: 0 RPM" />

            <com.github.glomadrian.velocimeterlibrary.VelocimeterView
                android:id="@+id/velocimeter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:padding="1dp"
                app:bottom_velocimeter_color="@color/white"
                app:digital_number_blur_color="@color/white"
                app:digital_number_color="@color/white"
                app:inside_progress_color="@color/colorPrimary"
                app:internal_velocimeter_color="@color/white"
                app:max="255"
                app:needle_blur_color="@color/colorPrimary"
                app:needle_color="@color/white"
                app:progress_blur_color="@color/colorPrimary"
                app:show_bottom_bar="false"
                app:units="rpm" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_light"
                        android:textAlignment="center"
                        android:text="Elige un color:"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/colorSeleccionado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rojo"
                        android:textAlignment="textStart"
                        android:textColor="@color/red"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnRed"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="Rojo"
                        android:layout_margin="15dp"
                        android:textSize="11sp"
                        android:background="@drawable/shape_btn_red"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"/>

                    <Button
                        android:id="@+id/btnGreen"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="Verde"
                        android:layout_margin="15dp"
                        android:textSize="11sp"
                        android:background="@drawable/shape_btn_green"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"/>

                    <Button
                        android:id="@+id/btnBlue"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="Azul"
                        android:textSize="11sp"
                        android:layout_margin="15dp"
                        android:background="@drawable/shape_btn_blue"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

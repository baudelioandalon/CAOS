<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <com.jmedeisis.bugstick.Joystick
            android:id="@+id/joystickRightt"
            android:layout_width="@dimen/base_size"
            android:layout_height="@dimen/base_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|bottom"
            android:background="@drawable/ic_front_back">

            <!-- You may use any View here. -->
            <Button
                android:id="@+id/btnRight"
                android:layout_width="@dimen/stick_size"
                android:layout_height="@dimen/stick_size"
                android:background="@drawable/bg_stick" />

        </com.jmedeisis.bugstick.Joystick>

        <com.jmedeisis.bugstick.Joystick
            android:id="@+id/joystickLeft"
            android:layout_width="@dimen/base_size"
            android:layout_height="@dimen/base_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|bottom"
            android:background="@drawable/bg_base">

            <!-- You may use any View here. -->
            <Button
                android:id="@+id/btnLeft"
                android:layout_width="@dimen/stick_size"
                android:layout_height="@dimen/stick_size"
                android:background="@drawable/bg_stick" />

        </com.jmedeisis.bugstick.Joystick>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_light"
                android:text="Velocidad: 0 RPM" />

            <com.github.glomadrian.velocimeterlibrary.VelocimeterView
                android:padding="1dp"
                android:id="@+id/velocimeter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                app:progress_blur_color="@color/colorPrimary"
                app:inside_progress_color="@color/needle"
                app:bottom_velocimeter_color="@color/white"
                app:internal_velocimeter_color="@color/white"
                app:needle_color="@color/white"
                app:needle_blur_color="@color/needle"
                app:digital_number_color="@color/white"
                app:digital_number_blur_color="@color/white"
                app:max="255"
                app:show_bottom_bar="false"
                app:units="rpm" />


        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
